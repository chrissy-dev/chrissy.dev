---
layout: "base.njk"
---

<header class="page-title">
	<h1 class="page-title__title">{{ title }}</h1>
	{% if description %}
		<h2 class="page-title__desc">{{ description }}</h2>
	{% endif %}
	{% if last_updated %}
		<p class="page-title__date">Last updated: <time datetime="{{ last_updated | postDate }}">{{ last_updated | postDate }}</time></p>
	{% endif %}
</header>

<article class="body-copy">
	{{ content | safe }}
</article>

